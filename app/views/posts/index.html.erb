<!DOCTYPE html>
  <html>
    <head>
      <title>PicTweet</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
    </head>
    <body>
    <% @posts.each do |post| %>
      <p><%= post.text %></p>
      <p><%= image_tag post.image.url(:medium) %></p>
    <% end %>
    </body>
  </html>